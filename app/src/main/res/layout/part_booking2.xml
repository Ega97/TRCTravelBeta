<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_mobil_dipilih"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/abu"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <RelativeLayout
            android:id="@+id/layout_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/gambar_layout"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gambar_mobil"
                android:layout_width="70dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="10dp"
                android:layout_height="60dp"
                android:src="@drawable/detail_booking"/>
            <RelativeLayout
                android:id="@+id/layoutisi"
                android:paddingBottom="10dp"
                android:layout_toRightOf="@id/gambar_mobil"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/merk_mobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kota Bumi"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/plat_mobil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Raya Abung Timur,"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:layout_below="@id/merk_mobil"/>
            </RelativeLayout>
            <View
                android:id="@+id/batas"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/abu"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/layoutisi"/>

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_keberangkatan"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/gambar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_keberangkatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:text="Keberangkatan"/>

                <TextView
                    android:id="@+id/get_keberangkatan"
                    android:layout_below="@+id/text_keberangkatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minggu, 17 Okt 2019"
                    android:textColor="@color/hijau"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_jam"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/layout_keberangkatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_jam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:text="Jam"/>

                <TextView
                    android:id="@+id/jam"
                    android:layout_below="@+id/text_jam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12.00 Siang"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_penjemputan"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/layout_jam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_penjemputan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="19sp"
                    android:text="Penjemputan "/>

                <TextView
                    android:id="@+id/penjemputan"
                    android:layout_below="@+id/text_penjemputan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jl. Soekarno Hatta No.16, Kampung
Baru, Kota Bandar Lampung, Lampung"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>