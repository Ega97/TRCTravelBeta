<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Login">

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

   <TextView
       android:layout_marginBottom="50dp"
       android:id="@+id/trc"
       android:textSize="45dp"
       android:layout_marginTop="50dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/putih"
       android:text="TRC"/>
    <TextView
        android:id="@+id/travel"
        android:textSize="45dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/trc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/putih"
        android:text="Travel"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/username_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:padding="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/roundedcorner_input"/>

        <EditText
            android:id="@+id/password_login"
            android:layout_below="@id/username_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/roundedcorner_input"/>

       <Button
           android:id="@+id/btn_sign_in"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="35dp"
           android:layout_marginRight="35dp"
           android:text="SIGN IN"
           android:layout_below="@id/password_login"
           android:layout_marginTop="25dp"
           android:textColor="@color/putih"
           android:background="@drawable/buttonroundedcorner"/>

        <TextView
            android:id="@+id/daftar_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Account"
            android:textSize="20dp"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:layout_marginTop="68dp"
            android:layout_below="@id/btn_sign_in"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/login_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk Sebagai Driver"
            android:textSize="17dp"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_below="@id/daftar_akun"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>