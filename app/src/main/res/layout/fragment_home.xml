<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu"
    tools:context=".HomeFragment">
    <include layout="@layout/action_bar"></include>
    <RelativeLayout
        android:layout_below="@id/tittle"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/bg">
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_profil"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profil_round"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/nama"
            android:textSize="7pt"
            android:fontFamily="sans-serif"
            android:textColor="@color/putih"
            android:textStyle="bold"
            android:layout_toRightOf="@id/circleimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penumpang"/>
        <TextView
            android:id="@+id/status"
            android:textSize="6pt"
            android:layout_marginLeft="10dp"
            android:textColor="@color/putih"
            android:fontFamily="sans-serif"
            android:layout_toRightOf="@id/circleimage"
            android:layout_below="@id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"/>
    </RelativeLayout>
    <TextView
        android:layout_below="@id/layout_profil"
        android:layout_width="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/putih"
        android:textStyle="bold"
        android:text="Informasi Keberangkatan Travel"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">
        <FrameLayout
            android:id="@+id/frame_home"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="430dp"
            android:layout_marginTop="100dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedcorner">

                <android.support.v7.widget.RecyclerView
                    android:layout_margin="5dp"
                    android:id="@+id/list_tanggal"
                    tools:listitem="@layout/list_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>