<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@color/abu"
    app:cardCornerRadius="3dp"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/gambar_layout"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gambar_mobil"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/mobil"/>
        <RelativeLayout
            android:layout_toRightOf="@id/gambar_mobil"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/merk_mobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toyota Avanza"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/plat_mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BE19182"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_below="@id/merk_mobil"/>
            <View
                android:id="@+id/batas"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/abu"
                android:layout_marginTop="1.9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="3dp"
                android:layout_below="@id/merk_mobil"
                android:layout_toRightOf="@id/plat_mobil"/>
            <TextView
                android:id="@+id/kursi_tersedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 Kursi"
                android:layout_marginLeft="6dp"
                android:textSize="14sp"
                android:layout_below="@id/merk_mobil"
                android:layout_toRightOf="@id/batas"/>
            <TextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status  :"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_below="@id/plat_mobil"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hijau"
                android:text="Tersedia"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                android:layout_below="@id/plat_mobil"
                android:layout_toRightOf="@id/status_txt"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>