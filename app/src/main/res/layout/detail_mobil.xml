<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:background="@color/abu"
    app:cardCornerRadius="3dp"
    android:elevation="1dp"
    android:id="@+id/itemcart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/gambar_layout"
        android:layout_width="match_parent"
        android:padding="6dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/merk_mobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Toyota Avanza"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/plat_mobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BE19182"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:layout_below="@id/merk_mobil"/>
            <View
                android:id="@+id/batas"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/abu"
                android:layout_marginTop="1.9dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="3dp"
                android:layout_below="@id/merk_mobil"
                android:layout_toRightOf="@id/plat_mobil"/>
            <TextView
                android:id="@+id/kursi_tersedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 Kursi"
                android:layout_marginLeft="3dp"
                android:textSize="14sp"
                android:layout_below="@id/merk_mobil"
                android:layout_toRightOf="@id/batas"/>
            <TextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status  :"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_below="@id/plat_mobil"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/hijau"
                android:text="Tersedia"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                android:layout_below="@id/plat_mobil"
                android:layout_toRightOf="@id/status_txt"/>
            <TextView
                android:id="@+id/tanggal_brgkt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Tanggal Berangkat :"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_below="@id/status_txt"/>
            <TextView
                android:id="@+id/tanggal_brgkt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 - 19 - 2019"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                android:layout_toRightOf="@id/tanggal_brgkt_txt"
                android:layout_below="@id/status_txt"/>
            <TextView
                android:id="@+id/jam_brgkt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam :"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_below="@id/tanggal_brgkt_txt"/>

            <TextView
                android:id="@+id/jam_brgkt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tanggal_brgkt_txt"
                android:layout_marginLeft="-70dp"
                android:layout_toRightOf="@id/tanggal_brgkt_txt"
                android:text="19:00 WIB"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>