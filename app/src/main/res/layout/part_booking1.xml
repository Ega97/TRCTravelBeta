<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_mobil_dipilih"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/abu"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/gambar_layout"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gambar_mobil"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/mobil"/>
            <RelativeLayout
                android:layout_toRightOf="@id/gambar_mobil"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/merk_mobil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toyota Avanza"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/plat_mobil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BE19182"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:layout_below="@id/merk_mobil"/>

                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Jumlah Kursi  :"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:layout_below="@id/plat_mobil"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hijau"
                    android:text="6 Kursi"
                    android:textStyle="bold"
                    android:layout_marginLeft="3dp"
                    android:textSize="12sp"
                    android:layout_below="@id/plat_mobil"
                    android:layout_toRightOf="@id/status_txt"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>