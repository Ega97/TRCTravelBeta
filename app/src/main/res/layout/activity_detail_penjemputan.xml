<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailPenjemputan">

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/bg"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="22dp"
            android:text="Detail Booking"
            android:textColor="@color/putih"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </android.support.v7.widget.Toolbar>


    <include layout="@layout/part_booking1"
        android:id="@+id/detail_mobils"
        android:layout_below="@+id/toolbar_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/part_booking2"
        android:id="@+id/detail_booking"
        android:layout_below="@+id/detail_mobils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bayar"
        android:layout_below="@id/detail_booking"
        android:background="@drawable/buttonroundedcorner"
        android:text="BAYAR"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/putih"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>