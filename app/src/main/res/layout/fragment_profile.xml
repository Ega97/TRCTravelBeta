<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/abu"
        tools:context=".ProfileFragment">


        <include layout="@layout/action_bar"></include>

        <RelativeLayout
            android:layout_below="@id/tittle"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/bg">

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="90dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profil_round"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/nama"
                android:textSize="7pt"
                android:fontFamily="sans-serif"
                android:textColor="@color/putih"
                android:textStyle="bold"
                android:layout_toRightOf="@id/circleimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penumpang"/>

            <TextView
                android:id="@+id/status"
                android:textSize="6pt"
                android:layout_marginLeft="10dp"
                android:textColor="@color/putih"
                android:fontFamily="sans-serif"
                android:layout_toRightOf="@id/circleimage"
                android:layout_below="@id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/siss"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginTop="170dp">

            <FrameLayout
                android:id="@+id/isi"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="15dp"
                android:layout_marginTop="100dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundedcorner"
                    android:padding="30dp">

                    <ImageView
                        android:id="@+id/user_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_location_on_24px" />

                    <ImageView
                        android:id="@+id/user_telp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_loc"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_call_24px" />

                    <ImageView
                        android:id="@+id/user_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_telp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_contact_mail_24px" />

                    <TextView
                        android:id="@+id/loc_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/user_loc"
                        android:text="Jl. Abdul Muis No 06, Gedong Meneng"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_telp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/loc_text"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/user_telp"
                        android:text="08374673463"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_telp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/user_mail"
                        android:text="aaliyando12@gmail.com"
                        android:textStyle="bold" />
                </RelativeLayout>

            </FrameLayout>



        </RelativeLayout>
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/siss"
        android:layout_margin="20dp"
        android:text="LOGOUT"
        android:textSize="19dp"
        android:textColor="@color/putih"
        android:background="@color/bg"/>

    </RelativeLayout>
